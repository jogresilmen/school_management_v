<odoo>
    <data>
        <!-- Hereda la vista de formulario de Contactos para a침adir la pesta침a de Educaci칩n -->
        <record id="view_partner_form_school" model="ir.ui.view">
            <field name="name">res.partner.form.school</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Educaci칩n" name="school_info" autofocus="autofocus">
                        <group>
                            <group>
                                <field name="is_student"/>
